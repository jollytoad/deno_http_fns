{
  "tasks": {
    "example": "deno run -A --watch",
    "test": "deno test -A --location=http://localhost:8000 --no-check",
    "check": "deno fmt && deno lint && deno check **/*.ts && deno task packages",
    "packages": "deno run --allow-read=. --allow-write=. scripts/packages.ts",
    "outdated": "deno run --allow-read=. --allow-net=jsr.io,registry.npmjs.org jsr:@check/deps",
    "lock": "rm -f deno.lock && deno check **/*.ts"
  },
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.221.0",
    "@std/collections": "jsr:@std/collections@^0.221.0",
    "@std/http": "jsr:@std/http@^0.221.0",
    "@std/media-types": "jsr:@std/media-types@^0.221.0",
    "@std/net": "jsr:@std/net@^0.221.0",
    "@std/path": "jsr:@std/path@^0.221.0",
    "@http/handler": "jsr:@http/handler",
    "@http/response": "jsr:@http/response",
    "@http/route": "jsr:@http/route",
    "@http/route-deno": "jsr:@http/route-deno",
    "@http/discovery": "jsr:@http/discovery",
    "@http/generate": "jsr:@http/generate",
    "@http/request": "jsr:@http/request",
    "@http/interceptor": "jsr:@http/interceptor",
    "@http/host-deno-deploy": "jsr:@http/host-deno-deploy",
    "@http/host-deno-local": "jsr:@http/host-deno-local",
    "@http/examples": "jsr:@http/examples"
  },
  "workspaces": [
    "./packages/discovery",
    "./packages/examples",
    "./packages/generate",
    "./packages/handler",
    "./packages/host-deno-deploy",
    "./packages/host-deno-local",
    "./packages/interceptor",
    "./packages/request",
    "./packages/response",
    "./packages/route",
    "./packages/route-deno"
  ]
}
